<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Introduction to Sequelize</title>

    <link href="../css/bootstrap.min.css" rel="stylesheet">

  </head>
  <body>
<div class="container">
  <div class="row">
    <div class="col-sg-6">
      <h1 class="text-center">Subjects List</h1>

      <a href="../"><button type="button" name="button" class="btn btn-primary">Home</button></a>
      <a href="./subjects/add"><button type="button" name="button" class="btn btn-warning">Add New</button></a>
          <table class="table table-striped table-hover">
            <thead>
              <th>No</th>
              <th>Subject Name</th>
              <th>Teachers</th>
              <th>Action</th>

            </thead>
            <% var i = 1; data_subjects.forEach(getData => { %>

            <tr>
              <td><%= i %><% i += 1 %></td>
              <td><%= getData.subject_name %></td>
              <td>
                <% if(getData.teachers[0] !== undefined) {%>
                <% var k = 1;
                for(var j =0; j < getData.teachers.length; j++) { %>

                <%= k %><% k += 1 %>.
                <%= getData.teachers[j].first_name  %> <%= getData.teachers[j].last_name  %> <br>
                <% } %>

                <% } else {%>
                  Gak ada guru
                  <%}%>

              </td>

              <td>
                <a href="/subjects/<%= getData.id %>/edit"><button type="button" name="button" class="btn btn-info">Edit</button></a>
                <a href="/subjects/<%= getData.id %>/delete"><button type="button" name="button" class="btn btn-danger">Delete</button></a>
              </td>
            </tr>
              <% }) %>
          </table>

    </div>
  </div>
</div>
    <script src="../js/jquery.min.js"></script>
    <script src="../js/bootstrap.min.js"></script>
  </body>
</html>
